{% extends 'base.html.twig' %}

{% block body %}

    <h1>Liste des thèmes</h1>

    <table class="table">
        <tbody>
        {% for theme in themeList %}
            <tr>
                <td>
                    <a href="{{ path('theme_details', {'id': theme.id}) }}">{{ theme.name }}  </a>
                </td>
                <td>{{ theme.numberofPosts }} posts</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



    <h2> Nouveau post </h2>
    {{ form(postForm) }}
    <h2> Liste des posts </h2>



{% endblock %}

{%  block aside %}

    <h3>Les posts par années</h3>
    <ul>
        {% for item in postList %}

            <li>
                <a href="{{ path('post_by_year', {'year': item.yearPublished}) }}" >  {{ item.yearPublished }}   </a> ({{ item.numberOfPosts }})
            </li>
        {% endfor %}
    </ul>

{% endblock %}


